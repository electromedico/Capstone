<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:layout_margin="@dimen/bars_margin"
    android:background="@color/white"
    android:paddingStart="@dimen/_search_bar_padding"
    android:paddingEnd="@dimen/_search_bar_padding"
    android:elevation="@dimen/dp8"
    android:clickable="true"
    tools:showIn="@layout/map_frame_layout">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_icon_ib"
        android:src="@drawable/ic_menu_black_24dp"
        android:background="@color/white_smoke"
        android:layout_gravity="center"
        android:contentDescription="@string/menu_icon" />

    <android.support.v7.widget.SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:searchIcon="@drawable/ic_search_black_24dp"
        android:id="@+id/search_view"
        app:iconifiedByDefault="false"
        app:defaultQueryHint="@string/search_destination" />

</LinearLayout>